<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText,MissingConstraints"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/shimmer_item1"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/shimmer_placeholder" />

    <TextView
        android:id="@+id/shimmer_item2"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_item1" />

    <TextView
        android:id="@+id/shimmer_item3"
        android:layout_width="250dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_item2" />

    <TextView
        android:id="@+id/shimmer_item4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_item3" />
</androidx.constraintlayout.widget.ConstraintLayout>